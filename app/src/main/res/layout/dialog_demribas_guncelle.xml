<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="demirbasGuncelleNesnesi"
            type="com.example.designs.DemirbasIslemleriFragment" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg12"
    android:layout_margin="10dp"
    android:padding="13dp">

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg11"
        android:padding="10dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/desk"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_weight="4">

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextbackground"
            android:ems="10"
            android:hint="Kategori Adı"
            android:inputType="text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittextbackground"
            android:ems="10"
            android:hint="Demirbaş Adı"
            android:inputType="text"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/backgroundactive"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_weight="1" />

</LinearLayout>
</layout>